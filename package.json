{
	"name": "tmt-actions",
	"version": "0.1.0",
	"description": "GitHub Actions for running packit",
	"main": "lib/actions/main.js",
	"scripts": {
		"prepare": "husky install",
		"build": "tsc",
		"format": "prettier --write '**/*.ts'",
		"format-check": "prettier --check '**/*.ts'",
		"lint": "eslint",
		"package": "ts-node src/scripts/run_ncc.ts",
		"test": "jest",
		"all": "npm run build && npm run format && npm run lint && npm run package && npm test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/packit/actions/"
	},
	"keywords": [
		"actions",
		"node",
		"setup"
	],
	"author": {
		"name": "Red Hat",
		"email": "user-cont-team@redhat.com"
	},
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^1.10.1",
		"@actions/exec": "^1.1.1",
		"@nexssp/os": "github:LecrisUT/os"
	},
	"devDependencies": {
		"@types/eslint": "^8.56.0",
		"@types/js-yaml": "^4.0.9",
		"@types/lint-staged": "^13.3.0",
		"@types/node": "^20.10.5",
		"@typescript-eslint/parser": "^6.16.0",
		"@vercel/ncc": "^0.38.1",
		"eslint": "^8.56.0",
		"eslint-plugin-github": "^4.10.1",
		"eslint-plugin-jest": "^27.6.0",
		"eslint-plugin-prettier": "^5.1.2",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"js-yaml": "^4.1.0",
		"lint-staged": "^15.2.0",
		"npm-check-updates": "^16.14.12",
		"prettier": "^3.1.1",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix"
	}
}
