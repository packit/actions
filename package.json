{
	"name": "packit-action",
	"version": "0.1.0",
	"description": "GitHub Actions provided by Packit",
	"main": "lib/actions/main.js",
	"scripts": {
		"prepare": "husky install",
		"build": "tsc",
		"format": "prettier --write '**/*.ts'",
		"format-check": "prettier --check '**/*.ts'",
		"lint": "eslint",
		"package": "node lib/scripts/ncc.js",
		"test": "jest",
		"all": "npm run build && npm run format && npm run lint && npm run package && npm test"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/packit/actions"
	},
	"keywords": [
		"actions",
		"node",
		"setup"
	],
	"author": {
		"name": "Red Hat",
		"email": "user-cont-team@redhat.com"
	},
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^1.10.0"
	},
	"devDependencies": {
		"@types/eslint": "^8.40.2",
		"@types/js-yaml": "^4.0.5",
		"@types/lint-staged": "^13.2.0",
		"@types/node": "^20.4.0",
		"@typescript-eslint/parser": "^5.61.0",
		"@vercel/ncc": "^0.36.1",
		"eslint": "^8.44.0",
		"eslint-plugin-github": "^4.8.0",
		"eslint-plugin-jest": "^27.2.2",
		"eslint-plugin-prettier": "^5.0.0-alpha.2",
		"husky": "^8.0.0",
		"jest": "^29.6.0",
		"js-yaml": "^4.1.0",
		"lint-staged": "^13.2.3",
		"npm-check-updates": "^16.10.13",
		"prettier": "^3.0.0",
		"ts-jest": "^29.1.1",
		"typescript": "^5.1.6"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix"
	}
}
